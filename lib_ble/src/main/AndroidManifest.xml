<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.css.ble">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:theme="@style/Wonder.Base">
        <activity android:name=".ui.WeightMeasureActivity" />
        <activity android:name=".ui.WeightMeasureEndDetailActivity" />
        <activity android:name=".ui.WeightBondActivity" />
        <activity android:name=".ui.WeightMeasureDoingActivity" />
        <activity android:name=".ui.DeviceInfoActivity" />
        <activity android:name=".ui.WeightMeasureBeginActivity" />
        <activity
            android:name=".ui.BleEntryActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.pingwang.bluetoothlib.server.ELinkBleServer" />
    </application>

</manifest>