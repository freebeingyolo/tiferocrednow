<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.css.service.data.DeviceData" />
    </data>

    <RelativeLayout
        android:id="@+id/device_weight"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_main_device"
        android:minWidth="160dp">

        <TextView
            android:id="@+id/weight_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="@{data.deviceName+data.deviceCategory}"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weight_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="未连接"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/weight_device_name"
            app:imageResource="@{data.deviceImg}" />
    </RelativeLayout>
</layout>