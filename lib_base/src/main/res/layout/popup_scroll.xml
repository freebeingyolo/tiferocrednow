<?xml version="1.0" encoding="utf-8"?>
<com.css.base.view.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:paddingTop="30dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:rv_backgroundColor="@android:color/white"
    app:rv_cornerRadius="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_313131"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="这是标题这是标题这是标题这是标题" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_313131"
        android:textSize="15sp"
        tools:text="这是内容这是内容这是内容这是内容" />
    
    <Button
        android:id="@+id/btn_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_e1251b_radius45"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="同意"/>

    <Button
        android:id="@+id/btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textColor="@color/color_313131"
        android:textSize="14sp"
        android:text="不同意"/>

</com.css.base.view.RoundLinearLayout>
