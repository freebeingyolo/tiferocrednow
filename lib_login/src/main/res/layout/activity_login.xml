<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    tools:context=".ui.LoginActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:layout_marginTop="62dp"
        android:src="@mipmap/wonder_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/login"
        android:textColor="#000000"
        android:textSize="27sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_telephone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/login_edittext_bg"
        android:hint="@string/register_phone_tip"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="7dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_phone_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="61dp"
        android:text="请输入符合大陆手机号格式的11位数字"
        android:textColor="#FFFF0000"
        android:textSize="9dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/login_edittext_bg"
        android:hint="@string/login_input_password"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingStart="7dp"
        android:textSize="12sp" />

    <com.css.base.view.RoundTextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="51dp"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:rv_backgroundColor="#FFF2682A"
        app:rv_cornerRadius="164dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="62dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="注册新用户"
            android:textColor="#FFF2682A"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#FFF2682A"
            android:textSize="10dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>